<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :artist_name, 'Artist Name' %>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, @genres, :id, :name %><br>

  <p>Notes: </p>
  <input name="song[note_contents][]" id="song_notes_1"><br><br>
  <input name="song[note_contents][]" id="song_notes_2"><br><br>

  <%= f.submit %>
<% end %>
